{
  "name": "Jump ListenOnRepeat",
  "version": "1.1",
  "manifest_version": 2,

  "description": "youtubeの動画ページをリピート再生用の外部サーベスへ飛ばすchrome拡張機能です。",

  "icons": {
    "48": "img/thumbnail.png"
  },

  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "scripts": ["scripts/app.js"]
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Jump ListenOnRepeat"
  }
}